target 'Test Runner' do
  pod "SKYKit", :path => "../"
  pod "SKYKit/Facebook", :path => "../"
  pod "SKYKit/Chat", :path => "../"
end

target 'Swift Example' do
  use_frameworks!

  pod "SKYKit", :path => "../"
  pod "SKYKit/Facebook", :path => "../"
  pod "SKYKit/Chat", :path => "../"
end

target 'Tests' do
  pod "SKYKit", :path => "../"
  pod "SKYKit/Facebook", :path => "../"
  pod "SKYKit/Chat", :path => "../"

  pod 'Specta'
  pod 'Expecta'
  pod 'OHHTTPStubs'
